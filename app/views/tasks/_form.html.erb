<div class="container">
<div class="d-flex flex-row">
  <%= form_for @task do |f| %>
    <% if @task.errors.full_messages.any? %>
      <%  @task.errors.full_messages.each do |msg| %>
        <p class='text-danger'><%= msg %></p>
      <% end %>
    <% end %>
    <div class="form-group">
      <strong><%= f.label :title %></strong>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <strong><%= f.label :details %></strong>
      <%= f.text_field :details, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <strong><%= f.label :completed %></strong>
      <%= f.check_box :completed, {}, true, false %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary mt-3' %>
    </div>
  <% end %>
  </div>
</div>
